<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.pingdum.models">

        <class name="Status" table="statuses">
            <id name="id" column="id">
                <generator class="native"/>
            </id>
            <property name="siteId" type="int" column="siteId"/>
            <property name="status" type="int" column="status"/>
            <property name="timeStamp" type="timestamp" column="timeStamp"/>
        </class>

</hibernate-mapping>